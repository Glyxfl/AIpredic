generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  chats     Chat[]
  createdAt DateTime @default(now())
}

model Chat {
  id        String   @id @default(cuid())
  title     String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Json
  model     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}